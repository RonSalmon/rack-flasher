source 'https://rubygems.org'

# Specify your gem's dependencies in rack-flasher.gemspec
gemspec

group :development do
  gem "yard"
  gem "redcarpet"
  gem "pry-debugger"
  gem "wirble"
end

group :test do
  gem "simplecov"
  gem "rspec"
  gem "rack-test"
end

group :examples do
  gem "haml"
  gem "sinatra"  # because it makes it more convenient for testing with all the helpers and stuff.
  gem "rake"
end
